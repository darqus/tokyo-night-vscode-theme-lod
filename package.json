{
  "name": "tokyo-night-lod",
  "displayName": "Tokyo Night Theme",
  "description": "A dark theme for Visual Studio Code",
  "version": "1.14.0",
  "author": "lod",
  "publisher": "lod-inc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "files": [
    "themes/",
    "icon.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darqus/tokyo-night-vscode-theme-lod"
  },
  "bugs": {
    "url": "https://github.com/darqus/tokyo-night-vscode-theme-lod/issues"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "tokyo",
    "night",
    "dark",
    "storm",
    "moon",
    "seasonal",
    "spring",
    "summer",
    "autumn",
    "winter",
    "accessibility",
    "high-contrast",
    "low-contrast",
    "protanopia",
    "deuteranopia",
    "gradient",
    "pastel",
    "retro",
    "adaptive",
    "palette",
    "collection"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Tokyo Night Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/tokyo-night-dark-color-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "ts-node src/build.ts",
    "validate": "ts-node scripts/validate-theme.ts",
    "validate:all": "npm run validate && npm run test",
    "test": "npm run test:unit",
    "test:unit": "jest tests/unit",
    "test:watch": "jest tests/unit --watch",
    "test:coverage": "jest tests/unit --coverage",
    "generate:all": "ts-node src/generators/theme-generator.ts --all",
    "theme-cli": "ts-node src/cli/theme-cli.ts",
    "package": "npm run generate:all && vsce package",
    "release": "ts-node scripts/release.ts",
    "release:bash": "bash scripts/release.sh",
    "release:dry": "ts-node scripts/release.ts --dry-run",
    "release:patch": "ts-node scripts/release.ts --patch",
    "release:minor": "ts-node scripts/release.ts --minor",
    "release:major": "ts-node scripts/release.ts --major"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.10",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/puppeteer": "^5.4.7",
    "jest": "^29.7.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.17.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
